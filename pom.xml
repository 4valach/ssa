<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.4.3.RELEASE</version>
	</parent>

	<groupId>es.gorka.edu</groupId>
	<artifactId>ssa</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>ssa</name>


	<repositories>
		<repository>
			<id>wicketstuff-core-snapshots</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<modules>
		<module>bad</module>
		<module>good</module>
		<module>web</module>
		<module>shared</module>
	</modules>


	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>
			<!-- https://mvnrepository.com/artifact/org.apache.wicket/wicket-core -->
			<dependency>
				<groupId>org.apache.wicket</groupId>
				<artifactId>wicket-core</artifactId>
				<version>${wicket.core}</version>
			</dependency>
			<dependency>
				<groupId>org.wicketstuff</groupId>
				<artifactId>wicketstuff-core</artifactId>
				<version>${wicket.stuff}</version>
			</dependency>

			<dependency>
				<groupId>es.gorka.edu</groupId>
				<artifactId>shared</artifactId>
				<version>${ssa.version}</version>
			</dependency>

			<dependency>
				<groupId>es.gorka.edu</groupId>
				<artifactId>good</artifactId>
				<version>${ssa.version}</version>
			</dependency>

			<dependency>
				<groupId>es.gorka.edu</groupId>
				<artifactId>bad</artifactId>
				<version>${ssa.version}</version>
			</dependency>
			
					<dependency>
				<groupId>es.gorka.edu</groupId>
				<artifactId>web</artifactId>
				<version>${ssa.version}</version>
			</dependency>

			<dependency>
				<groupId>de.agilecoders.wicket</groupId>
				<artifactId>wicket-bootstrap-core</artifactId>
				<version>${wicket.bootstrap}</version>
			</dependency>

			<dependency>
				<groupId>de.agilecoders.wicket</groupId>
				<artifactId>wicket-bootstrap-extensions</artifactId>
				<version>${wicket.bootstrap}</version>
			</dependency>

			<dependency>
				<groupId>de.agilecoders.wicket</groupId>
				<artifactId>wicket-bootstrap-themes</artifactId>
				<version>${wicket.bootstrap}</version>
			</dependency>

		</dependencies>
	</dependencyManagement>



	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<properties>
		<ssa.version>1.0.0-SNAPSHOT</ssa.version>
		<wicket.bootstrap>2.0.0-M2</wicket.bootstrap>
		<wicket.core>8.0.0-M3</wicket.core>
		<wicket.stuff>8.0.0</wicket.stuff>
		<junit.version>4.12</junit.version>
		
		
	</properties>

</project>
